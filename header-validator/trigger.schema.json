{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wicg.github.io/attribution-reporting-api/trigger.schema.json",
  "title": "Trigger",
  "description": "An Attribution Reporting trigger registration",
  "type": "object",
  "properties": {
    "aggregatable_deduplication_keys": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "deduplication_key": {
            "$ref": "#/$defs/unsigned_base10_integer"
          },
          "filters": {
            "$ref": "#/$defs/filters"
          },
          "not_filters": {
            "$ref": "#/$defs/filters"
          }
        }
      }
    },
    "aggregatable_trigger_data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key_piece": {
            "type": "string",
            "pattern": "^0[xX][0-9a-fA-F]{1,32}$"
          },
          "filters": {
            "$ref": "#/$defs/filters"
          },
          "not_filters": {
            "$ref": "#/$defs/filters"
          },
          "source_keys": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "maxItems": 20
          }
        },
        "required": ["key_piece"]
      }
    },
    "aggregation_coordinator_identifier": {
      "type": "string"
    },
    "aggregatable_source_registration_time": {
      "type": "string",
      "pattern": "^(exclude|include)$"
    },
    "aggregatable_values": {
      "type": "object",
      "additionalProperties": {
        "type": "integer",
         "exclusiveMinimum": 0,
         "maximum": 65536
      },
      "maxProperties": 20
    },
    "debug_key": {
      "$ref": "#/$defs/unsigned_base10_integer"
    },
    "debug_reporting": {
      "type": "boolean"
    },
    "event_triggers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "deduplication_key": {
            "$ref": "#/$defs/unsigned_base10_integer"
          },
          "filters": {
            "$ref": "#/$defs/filters"
          },
          "not_filters": {
            "$ref": "#/$defs/filters"
          },
          "priority": {
            "$ref": "#/$defs/signed_base10_integer"
          },
          "trigger_data": {
            "$ref": "#/$defs/unsigned_base10_integer"
          }
        }
      }
    },
    "filters": {
      "$ref": "#/$defs/filters"
    },
    "not_filters": {
      "$ref": "#/$defs/filters"
    }
  },

  "$defs": {
    "filter": {
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "filters": {
      "type": ["array", "object"],
      "items": {
        "$ref": "#/$defs/filter"
      },
      "$ref": "#/$defs/filter"
    },
    "signed_base10_integer": {
      "type": "string",
      "pattern": "^-?[0-9]+$"
    },
    "unsigned_base10_integer": {
      "type": "string",
      "pattern": "^[0-9]+$"
    }
  }
}
